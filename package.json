{
  "name": "fairlight",
  "description": "Illuminate your REST API with React hooks and a centralized cache.",
  "keywords": [
    "rest",
    "api",
    "client",
    "react",
    "hooks",
    "cache",
    "fetch"
  ],
  "version": "0.7.0",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "author": "Thomas Dashney <thomas.dashney@d1g1t.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d1g1tinc/fairlight.git"
  },
  "bugs": {
    "url": "https://github.com/d1g1tinc/fairlight/issues"
  },
  "homepage": "https://github.com/d1g1tinc/fairlight",
  "scripts": {
    "test": "jest",
    "lint": "eslint 'src/**/*.tsx'",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf -r dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run bundle && npm run prepdist",
    "bundle": "rollup -c",
    "prepdist": "node ./scripts/prepare-dist.js"
  },
  "dependencies": {
    "typesafe-actions": "^5.1.0",
    "zen-observable": "^0.8.15",
    "zen-push": "^0.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^25.1.3",
    "@types/zen-observable": "^0.8.0",
    "@types/zen-push": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "jest": "^25.1.0",
    "jest-fetch-mock": "^3.0.1",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.31.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.5"
  }
}
